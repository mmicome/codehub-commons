{
  "name": "codehub-commons",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "build": "npm run lint && tsc",
    "watch": "nodemon --watch src -e ts --exec ts-node ./src/index.ts",
    "lint": "eslint --ext .js,.ts ./src",
    "fix": "eslint --ext .js,.ts --fix ./src",
    "image:build": "docker build --tag codehub-common .",
    "image:run": "docker run --rm -ti -p 3000:3000 codehub-common",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register ./src/test/**/*.spec.ts && exit 0",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --exit -r ts-node/register ./src/test/**/*.spec.ts",
    "coverage:coveralls": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-lcov mocha --exit -r ts-node/register ./src/test/**/*.spec.ts | coveralls"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "async-validator": "^4.2.5",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.4.0",
    "koa-bunyan-logger": "^2.1.0",
    "koa-compress": "^5.1.0",
    "koa-helmet": "^7.0.1",
    "koa-jwt": "^4.0.4",
    "koa-mock": "^2.0.0",
    "koa-redis": "^4.0.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.4",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-bunyan-logger": "^2.1.4",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.5",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.21",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2"
  }
}
